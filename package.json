		"vue-click-outside": "^1.0.7",
		"vue-jest": "^3.0.4",
		"vue-loader": "^15.7.0",
		"vue-template-compiler": "^2.6.10",
		"webpack": "^4.30.0",
		"webpack-cli": "^3.3.1",
		"webpack-merge": "^4.2.1"
	},
	"engines": {
		"node": ">=10.0.0"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"vue"
		],
		"moduleNameMapper": {
			"^@/(.*)$": "<rootDir>/src/$1"
		},
		"transform": {
			"^.+\\.js$": "<rootDir>/node_modules/babel-jest",
			".*\\.(vue)$": "<rootDir>/node_modules/vue-jest"
		},
		"snapshotSerializers": [
			"<rootDir>/node_modules/jest-serializer-vue"
		],
		"collectCoverage": true,
		"collectCoverageFrom": [
			"<rootDir>/src/**/*.{js,vue}",
			"!**/node_modules/**"
		],
		"coverageReporters": [
			"json",
			"text",
			"html"
		]
	}
}
